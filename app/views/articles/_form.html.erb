<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>


<%= form_for @article do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description %><br/>

  <%= f.submit %>
<% end %>

<%= link_to "All Articles", articles_path %>