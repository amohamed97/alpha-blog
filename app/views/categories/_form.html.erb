<%= form_for(@category, html: {class: "form-horizontal myform", role: "form"}) do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2"%>
    <div class = "form col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Username", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit( @category.new_record? ? "Create" : "Update", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "Cancel and go back to homepage", root_path %>]
</div>