<h1 class="center">Listing categories</h1>

<div class="center">
  <%= will_paginate %>
</div>

<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="well well-lg center">
          <li>
            <h4><%= link_to category.name,category_path(category) %></h4>
          </li>
          <li>
            <p>
              <smal> <%= pluralize(category.articles.count,"article" ) %></smal>
            </p>
          </li>
          <% if logged_in? && current_user.admin? %>
            <li>
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-xs btn-primary" %>
              <%= link_to "Delete", category_path(category), method: :delete,
                          data: {confirm: "Are you sure you want to delete this category?"},
                          class: "btn btn-xs btn-danger" %>
            </li>
          <% end %>
        </div>
      </div>
    </div>
  </ul>
<% end %>

<div class="center">
  <%= will_paginate %>
</div>