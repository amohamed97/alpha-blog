<h1 class="center">Listing categories</h1>

<div class="center">
  <%= will_paginate %>
</div>

<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="well well-lg center">
          <li>
            <h4><%= link_to category.name,category_path(category) %></h4>
          </li>
          <li>
            <smal> <%= pluralize(category.articles.count,"article" ) %></smal>
          </li>
        </div>
      </div>
    </div>
  </ul>
<% end %>

<div class="center">
  <%= will_paginate %>
</div>