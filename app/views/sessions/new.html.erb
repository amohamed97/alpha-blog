<h1 class="center"> Login </h1>
<%= form_for(:session, html: {class: "form-horizontal myform", role: "form", url: login_path}) do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class = "form col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-2" %>
    <div class = "form col-sm-8">
      <%= f.text_field :password, class: "form-control",type: "password", placeholder: "Enter password", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit("Login", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "Cancel and go back to homepage", root_path %>]
</div>