<h1 class="center"><%= header %></h1>

<%= render "shared/errors", obj: @user %>


<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, html: {class: "form-horizontal myform", role: "form"}) do |f| %>

      <div class="form-group">
        <%= f.label :username, class: "control-label col-sm-2"%>
        <div class = "form col-sm-7">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-2" %>
        <div class = "form col-sm-7">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-2" %>
        <div class = "form col-sm-7">
          <%= f.text_field :password, class: "form-control",type: "password", placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update user", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "Cancel and go back to homepage", root_path %>]
</div>